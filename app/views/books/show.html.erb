<%= cl_image_tag @book.photo.key, height: 300, width: 400, crop: :fill %>
<div class="card-category"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @book.photo.key, height: 300, crop: :fill %>')"
>
<h1><%= @book.title %></h1>

<h1><%= @book.title %></h1>
<p>Publishing Year: <%= @book.publishing_year %></p>

<% if @book.photo.attached? %>
  <%= image_tag @book.photo %>
<% end %>

<p><%= @book.review %></p>

<h2>Reviews</h2>

<% @reviews.each do |review| %>
  <p><%= review.content %></p>
  <p>Rating: <%= review.rating %></p>
  <p>Author: <%= review.user.email %></p>
<% end %>
